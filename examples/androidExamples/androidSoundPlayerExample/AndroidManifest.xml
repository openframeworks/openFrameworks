<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0"
      android:installLocation="preferExternal" package="cc.openframeworks.androidSoundPlayerExample">
    <uses-sdk android:minSdkVersion="8" />
    <application android:label="@string/app_name"
                 android:debuggable="true" android:icon="@drawable/ofwgreen">
        <activity android:name=".OFActivity"
                  android:label="@string/app_name" android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
</manifest> 
